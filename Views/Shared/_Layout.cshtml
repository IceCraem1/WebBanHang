<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanHang.styles.css" asp-append-version="true" />
</head>
    <header>
        <div class="logo">
            <img src="~/Data_img/logo 1.png" alt="Logo">
            <img src="~/Data_img/logo 2.png" alt="Logo">
        </div>
        <div class="search-cart">
            <input type="text" placeholder="Tìm kiếm sản phẩm">
            <button class="cart-btn"><a href="tblNguoiDungs">Tài khoản</a></button>
            <button class="cart-btn"><a href="tblGioHangs">Giỏ hàng</a></button>
        </div>
    </header>
    <body></body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
        
</html>
